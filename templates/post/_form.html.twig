{{ form_start(form) }}

<div class="row mb-3">
    <label for="inputText" class="col-sm-2 col-form-label">Title</label>
    <div class="col-sm-10">
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="row mb-3">
    <label for="inputText" class="col-sm-2 col-form-label">Image</label>
    <div class="col-sm-10">
        {{ form_widget(form.postPicture, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="row mb-3">
    <label for="inputTextarea" class="col-sm-2 col-form-label">Content</label>
    <div class="col-sm-10">
        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5}}) }}
    </div>
</div>

<div class="row mb-3">
    <label for="inputDate" class="col-sm-2 col-form-label">Date</label>
    <div class="col-sm-10">
        {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<button class="btn btn-primary">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}
