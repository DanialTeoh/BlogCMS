{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block content %}
    <h1>User index</h1>

    <table class="table" style="margin-left: -50px;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ loop.index }}</td> {# ni nak jadikan 1,2,3 instead of nombor id #}
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.permission.nama }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a class="btn" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a class="btn" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
